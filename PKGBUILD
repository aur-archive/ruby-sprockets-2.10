_gemname=sprockets
pkgname=ruby-$_gemname-2.10
pkgver=2.10.2
pkgrel=1
pkgdesc='Rack-based asset packaging system'
arch=(any)
url='http://getsprockets.org/'
license=(MIT)
depends=(ruby ruby-hike-1 ruby-multi_json ruby-rack ruby-tilt-1)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
sha1sums=('2f00b5540a0fed562177acccc2bdfcbe759cd1c8')

package() {
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir/$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
  rm "$pkgdir/$_gemdir/cache/$_gemname-$pkgver.gem"
  install -D -m644 "$pkgdir/$_gemdir/gems/$_gemname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  # non-HEAD version should not install any files in /usr/bin
  rm -r "$pkgdir/usr/bin/"
}
